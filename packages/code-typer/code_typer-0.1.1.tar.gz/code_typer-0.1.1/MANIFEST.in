# Include essential files
include LICENSE
include README.md
include pyproject.toml
include setup.py

# Include Cython source files
recursive-include code_typer *.pyx

# Include generated C files for building without Cython
recursive-include code_typer *.c

# Include type stubs
include code_typer/py.typed

# Prune directories that should never be included
prune */__pycache__
prune *.egg-info
prune .git
prune .venv
prune .mypy_cache
prune .pytest_cache
prune .ruff_cache
