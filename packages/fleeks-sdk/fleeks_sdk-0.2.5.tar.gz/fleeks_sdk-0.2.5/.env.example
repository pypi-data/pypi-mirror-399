# ============================================================================
# Fleeks Python SDK - Environment Configuration Example
# ============================================================================
# Copy this file to .env.local and fill in your actual values.
# This file shows all available configuration options.

# ============================================================================
# REQUIRED SETTINGS
# ============================================================================

# Your Fleeks API key (required)
# Get yours at: https://fleeks.ai/dashboard/api-keys
FLEEKS_API_KEY=fleeks_sk_your_api_key_here

# API base URL (choose based on environment)
# Development: http://localhost:8000
# Staging: https://api-staging.fleeks.ai
# Production: https://api.fleeks.ai
FLEEKS_BASE_URL=https://api.fleeks.ai

# ============================================================================
# ENVIRONMENT SETTINGS
# ============================================================================

# Environment name (development, staging, production)
FLEEKS_ENVIRONMENT=development

# API version to use
FLEEKS_API_VERSION=v1

# ============================================================================
# REQUEST CONFIGURATION
# ============================================================================

# Request timeout in seconds (default: 60)
FLEEKS_TIMEOUT=60

# Maximum number of retry attempts (default: 3)
FLEEKS_MAX_RETRIES=3

# Delay between retries in seconds (default: 1.0)
FLEEKS_RETRY_DELAY=1.0

# ============================================================================
# WEBSOCKET CONFIGURATION
# ============================================================================

# WebSocket URL
# Development: ws://localhost:8000/ws
# Staging: wss://api-staging.fleeks.ai/ws
# Production: wss://api.fleeks.ai/ws
FLEEKS_WS_URL=wss://api.fleeks.ai/ws

# WebSocket ping interval in seconds (default: 25)
FLEEKS_WS_PING_INTERVAL=25

# WebSocket ping timeout in seconds (default: 20)
FLEEKS_WS_PING_TIMEOUT=20

# Maximum reconnection attempts (default: 5)
FLEEKS_WS_MAX_RECONNECT_ATTEMPTS=5

# Delay between reconnection attempts in seconds (default: 2.0)
FLEEKS_WS_RECONNECT_DELAY=2.0

# ============================================================================
# LOGGING & DEBUG
# ============================================================================

# Enable debug mode (true/false)
FLEEKS_DEBUG=false

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
FLEEKS_LOG_LEVEL=INFO

# Log file path (leave empty to disable file logging)
FLEEKS_LOG_FILE=fleeks_sdk.log

# Log format
FLEEKS_LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# ============================================================================
# HTTP CLIENT SETTINGS
# ============================================================================

# User agent string
FLEEKS_USER_AGENT=fleeks-python-sdk/0.1.0

# Maximum number of connections (default: 100)
FLEEKS_MAX_CONNECTIONS=100

# Maximum number of keepalive connections (default: 20)
FLEEKS_MAX_KEEPALIVE_CONNECTIONS=20

# Keepalive expiry in seconds (default: 30)
FLEEKS_KEEPALIVE_EXPIRY=30

# ============================================================================
# RATE LIMITING
# ============================================================================

# Enable client-side rate limiting (true/false)
FLEEKS_RATE_LIMIT_ENABLED=true

# Maximum requests per minute (default: 100)
FLEEKS_MAX_REQUESTS_PER_MINUTE=100

# Maximum requests per hour (default: 6000)
FLEEKS_MAX_REQUESTS_PER_HOUR=6000

# ============================================================================
# SSL/TLS CONFIGURATION
# ============================================================================

# Verify SSL certificates (true/false) - ALWAYS true in production!
FLEEKS_VERIFY_SSL=true

# Path to custom SSL certificate (optional)
FLEEKS_SSL_CERT_PATH=

# Path to SSL private key (optional)
FLEEKS_SSL_KEY_PATH=

# ============================================================================
# FILE OPERATIONS
# ============================================================================

# Maximum upload size in MB (default: 100)
FLEEKS_MAX_UPLOAD_SIZE_MB=100

# Upload/download chunk size in KB (default: 1024)
FLEEKS_CHUNK_SIZE_KB=1024

# Upload timeout in seconds (default: 300)
FLEEKS_UPLOAD_TIMEOUT=300

# ============================================================================
# STREAMING SETTINGS
# ============================================================================

# Stream buffer size in bytes (default: 8192)
FLEEKS_STREAM_BUFFER_SIZE=8192

# Stream timeout in seconds (default: 60)
FLEEKS_STREAM_TIMEOUT=60

# ============================================================================
# CACHING
# ============================================================================

# Enable response caching (true/false)
FLEEKS_CACHE_ENABLED=false

# Cache TTL in seconds (default: 300)
FLEEKS_CACHE_TTL=300

# Maximum cache size (default: 100)
FLEEKS_CACHE_MAX_SIZE=100

# ============================================================================
# PROXY SETTINGS (Optional)
# ============================================================================

# HTTP proxy URL
FLEEKS_HTTP_PROXY=

# HTTPS proxy URL
FLEEKS_HTTPS_PROXY=

# Hosts to bypass proxy (comma-separated)
FLEEKS_NO_PROXY=localhost,127.0.0.1

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# Enable/disable specific SDK features
FLEEKS_ENABLE_WORKSPACES=true
FLEEKS_ENABLE_CONTAINERS=true
FLEEKS_ENABLE_FILES=true
FLEEKS_ENABLE_TERMINAL=true
FLEEKS_ENABLE_AGENTS=true
FLEEKS_ENABLE_STREAMING=true
FLEEKS_ENABLE_BILLING=true

# ============================================================================
# ERROR HANDLING
# ============================================================================

# Raise exceptions on errors (true/false)
FLEEKS_RAISE_ON_ERROR=true

# Capture and log exceptions (true/false)
FLEEKS_CAPTURE_EXCEPTIONS=true

# ============================================================================
# PERFORMANCE MONITORING
# ============================================================================

# Enable metrics collection (true/false)
FLEEKS_ENABLE_METRICS=false

# Enable distributed tracing (true/false)
FLEEKS_ENABLE_TRACING=false

# Metrics reporting interval in seconds (default: 60)
FLEEKS_METRICS_INTERVAL=60

# ============================================================================
# DEVELOPMENT HELPERS (Disable in production!)
# ============================================================================

# Print HTTP requests to console (true/false)
FLEEKS_PRINT_REQUESTS=false

# Print HTTP responses to console (true/false)
FLEEKS_PRINT_RESPONSES=false

# Save request logs to files (true/false)
FLEEKS_SAVE_REQUEST_LOGS=false

# Request log directory
FLEEKS_REQUEST_LOG_DIR=./logs/requests

# ============================================================================
# TESTING CONFIGURATION
# ============================================================================

# Enable test mode (true/false)
FLEEKS_TEST_MODE=false

# Use mock responses (true/false)
FLEEKS_MOCK_RESPONSES=false

# Test API key (for unit tests only)
FLEEKS_TEST_API_KEY=fleeks_sk_test_for_testing_only

# ============================================================================
# CIRCUIT BREAKER (Advanced)
# ============================================================================

# Enable circuit breaker pattern (true/false)
FLEEKS_CIRCUIT_BREAKER_ENABLED=false

# Failure threshold before opening circuit (default: 5)
FLEEKS_CIRCUIT_BREAKER_FAILURE_THRESHOLD=5

# Recovery timeout in seconds (default: 60)
FLEEKS_CIRCUIT_BREAKER_RECOVERY_TIMEOUT=60

# Successes needed in half-open state (default: 2)
FLEEKS_CIRCUIT_BREAKER_HALF_OPEN_SUCCESSES=2
