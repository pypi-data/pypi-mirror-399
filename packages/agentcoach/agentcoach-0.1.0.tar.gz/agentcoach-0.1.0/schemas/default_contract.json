{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Agent Output Contract",
  "description": "Default contract schema for agent outputs",
  "type": "object",
  "required": ["answer"],
  "properties": {
    "answer": {
      "type": "string",
      "description": "The main answer or response from the agent",
      "minLength": 1
    },
    "confidence": {
      "type": "number",
      "description": "Confidence score between 0 and 1",
      "minimum": 0,
      "maximum": 1
    },
    "citations": {
      "type": "array",
      "description": "List of evidence references supporting the answer",
      "items": {
        "type": "object",
        "properties": {
          "source": {
            "type": "string",
            "description": "Source identifier (tool name, document ID, etc.)"
          },
          "snippet": {
            "type": "string",
            "description": "Relevant excerpt from the source"
          },
          "relevance": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
          }
        },
        "required": ["source"]
      }
    },
    "next_actions": {
      "type": "array",
      "description": "Suggested follow-up actions or next steps",
      "items": {
        "type": "string"
      }
    }
  }
}
