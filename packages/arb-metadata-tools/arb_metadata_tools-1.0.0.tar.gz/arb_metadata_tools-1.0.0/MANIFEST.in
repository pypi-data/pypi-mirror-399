# Include essential documentation files
include README.md
include LICENSE
include CHANGELOG.md

# Exclude local development files
exclude .local
global-exclude .local/*

# Exclude publishing/development files (not needed by users)
exclude .gitignore
exclude .git*

# Exclude build artifacts
global-exclude __pycache__
global-exclude *.py[co]
global-exclude *.egg-info
global-exclude .DS_Store
global-exclude build/
global-exclude dist/
