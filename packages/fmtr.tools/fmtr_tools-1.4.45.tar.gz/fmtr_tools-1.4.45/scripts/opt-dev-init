#!/bin/bash

set -ex

USERNAME=${USERNAME-$(whoami)}

sudo mkdir -p /opt/dev/ve
sudo chown ${USERNAME}:${USERNAME} -R /opt/dev

sudo apt install python3-venv --yes
python -m venv /opt/dev/ve/shell
sudo --user $USERNAME /opt/dev/ve/shell/bin/pip install fmtr.tools
sudo ln -s /opt/dev/ve/shell/bin/run-script /rss


sudo /rss set-user-sudo --username=$USERNAME
sudo /rss set-secure-path

#echo "source /opt/dev/ve/shell/bin/activate" >> ~/.bashrc

