{
    "database": "madsci_workcells",
    "schema_version": "1.0.0",
    "description": "Schema definition for MADSci Workcell Manager MongoDB",
    "collections": {
      "archived_workflows": {
        "description": "Archived workflows collection",
        "indexes": [
          {
            "keys": [["workflow_id", 1]],
            "name": "workflow_id_1",
            "background": true,
            "unique": true,
            "description": "Unique constraint on workflow_id for fast lookups"
          },
          {
            "keys": [["submitted_time", -1]],
            "name": "submitted_time_desc",
            "background": true,
            "description": "Index for querying workflows by submission time"
          }
        ]
      },
      "schema_versions": {
        "description": "Version tracking for schema migrations",
        "indexes": [
          {
            "keys": [["version", 1]],
            "name": "version_unique",
            "unique": true,
            "description": "Unique constraint on version strings"
          },
          {
            "keys": [["applied_at", -1]],
            "name": "applied_at_desc",
            "description": "Index for chronological version tracking"
          }
        ]
      }
    }
  }
