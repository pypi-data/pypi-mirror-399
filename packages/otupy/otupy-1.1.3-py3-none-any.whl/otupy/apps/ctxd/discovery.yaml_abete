loop: 1 # -1: forever, 0: no run, >0: number of runs
publishers:
  mongodb:
    host: '172.17.0.11'
    port: 27017
    db_name: "miranda"
    collection: "contextdata"
    user: "miranda"
    pass: "miranda2025"
  file: Null
  kafka:
    host: '172.17.0.11'
    port: 29092
    topic: "demo"
#  security_protocol: "SSL"
    sasl_mechanism: Null
    sasl_plain_username: Null
    sasl_plain_password: Null
    ssl_cafile: 'ca-cert'
services:
  - host: '172.17.0.11'
    port: 8080
    endpoint: "/.well-known/openc2"
    encoding: "json"
    transfer: "http"
    actuator:
      asset_id: "ctxd-kubernetes-example"
