# ARTEMIS Agents Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# LLM Provider API Keys
# =============================================================================

# OpenAI (required for GPT-4o, o1 models)
OPENAI_API_KEY=sk-your-openai-api-key

# Anthropic (required for Claude models)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# Google AI Studio (for Gemini models via AI Studio)
GOOGLE_API_KEY=your-google-api-key
# Alternative: GEMINI_API_KEY=your-gemini-api-key

# Google Vertex AI (for Gemini models via Vertex AI - higher rate limits)
# Set GOOGLE_CLOUD_PROJECT to use Vertex AI instead of AI Studio
# GOOGLE_CLOUD_PROJECT=your-gcp-project-id
# GOOGLE_CLOUD_LOCATION=us-central1

# DeepSeek (required for R1 model)
DEEPSEEK_API_KEY=your-deepseek-api-key

# =============================================================================
# Default Configuration
# =============================================================================

# Default model for agents (if not specified)
ARTEMIS_DEFAULT_MODEL=gpt-4o

# Default number of debate rounds
ARTEMIS_DEFAULT_ROUNDS=3

# Default jury size
ARTEMIS_DEFAULT_JURY_SIZE=3

# =============================================================================
# Safety Configuration
# =============================================================================

# Safety monitoring mode: off, passive, active
ARTEMIS_SAFETY_MODE=passive

# Halt debate on safety violation (true/false)
ARTEMIS_HALT_ON_SAFETY=false

# Sandbagging detection sensitivity (0.0 - 1.0)
ARTEMIS_SANDBAGGING_SENSITIVITY=0.8

# Deception alert threshold (0.0 - 1.0)
ARTEMIS_DECEPTION_THRESHOLD=0.7

# =============================================================================
# Logging & Debugging
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
ARTEMIS_LOG_LEVEL=INFO

# Enable detailed tracing (true/false)
ARTEMIS_TRACE_ENABLED=false

# =============================================================================
# MCP Server Configuration
# =============================================================================

# MCP server port
ARTEMIS_MCP_PORT=8080

# MCP server host
ARTEMIS_MCP_HOST=localhost

# Session timeout in minutes
ARTEMIS_SESSION_TIMEOUT=30

# =============================================================================
# Development Settings
# =============================================================================

# Enable development mode (more verbose logging)
ARTEMIS_DEV_MODE=false

# Mock LLM responses for testing (true/false)
ARTEMIS_MOCK_LLM=false
