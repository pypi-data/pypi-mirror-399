# Environment Variables Template
# Copy this to .env and fill in your values

# OpenAI Configuration (Required)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Qdrant Vector Database (Required for RAG apps)
QDRANT_URL=http://localhost:6333
# For Qdrant Cloud:
# QDRANT_URL=https://your-cluster.qdrant.io
# QDRANT_API_KEY=your_qdrant_api_key

# Application Configuration
NODE_ENV=development
API_HOST=0.0.0.0
API_PORT=7860

# CORS Origins (comma-separated)
# For development: http://localhost:3000,http://localhost:7860
# For production: https://yourdomain.github.io,https://yourdomain.com
CORS_ORIGINS=http://localhost:3000,http://localhost:7860

# Rate Limiting (Optional)
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_WINDOW=60

# Database (If applicable)
DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# External Services (Optional)
REDIS_URL=redis://localhost:6379

# Monitoring (Optional)
SENTRY_DSN=your_sentry_dsn_here
LOG_LEVEL=INFO

# Feature Flags (Optional)
ENABLE_METRICS=true
ENABLE_TRACING=false

# Security (Optional)
JWT_SECRET=your_jwt_secret_here
API_KEY=your_api_key_here

# Platform Specific (Auto-detected)
# SPACE_ID=auto_set_on_hf_spaces
# VERCEL_URL=auto_set_on_vercel
# NETLIFY_URL=auto_set_on_netlify