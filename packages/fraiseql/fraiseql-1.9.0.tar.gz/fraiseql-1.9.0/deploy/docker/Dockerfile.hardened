# syntax=docker/dockerfile:1.4

# Hardened Multi-stage Dockerfile for FraiseQL
# Government-grade security with python:3.13-slim
# Zero CRITICAL/HIGH vulnerabilities (as of 2025-12-09)

# =============================================================================
# Stage 1: Builder (with full toolchain)
# =============================================================================
FROM python:3.13-slim AS builder

# Install build dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    gcc \
    g++ \
    libpq-dev \
    curl \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/*

# Install Rust for fraiseql_rs compilation
RUN curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh -s -- -y
ENV PATH="/root/.cargo/bin:${PATH}"

# Set working directory
WORKDIR /build

# Copy dependency files first for better caching
COPY pyproject.toml README.md Cargo.toml Cargo.lock ./
COPY src ./src
COPY fraiseql_rs ./fraiseql_rs

# Build fraiseql-confiture wheel first (no cp313-manylinux on PyPI yet)
RUN pip install build maturin && \
    mkdir -p /build/dist && \
    pip download --no-deps --dest /tmp fraiseql-confiture>=0.1.0 && \
    cd /tmp && \
    tar -xzf fraiseql_confiture-*.tar.gz && \
    cd fraiseql_confiture-*/ && \
    python -m build --wheel && \
    mv dist/*.whl /build/dist/

# Build FraiseQL wheel
RUN python -m build --wheel

# =============================================================================
# Stage 2: Production (Hardened - Government Grade)
# =============================================================================
FROM python:3.13-slim AS production

# Labels for compliance and metadata
LABEL org.opencontainers.image.authors="FraiseQL Team" \
      org.opencontainers.image.version="1.8.0-beta.4" \
      org.opencontainers.image.description="Government-grade GraphQL-to-PostgreSQL framework" \
      org.opencontainers.image.vendor="FraiseQL Project" \
      org.opencontainers.image.licenses="MIT" \
      security.compliance="Government Agency Ready" \
      security.scan.trivy="enabled" \
      security.sbom="generated" \
      security.vulnerabilities.critical="0" \
      security.vulnerabilities.high="0"

# Install only runtime dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    libpq5 \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/*

# Security hardening: Remove unnecessary packages
RUN apt-get purge -y --auto-remove \
    && rm -rf /var/cache/apt/* \
    && rm -rf /var/lib/apt/lists/* \
    && rm -rf /tmp/* \
    && rm -rf /var/tmp/*

# Create non-root user with fixed UID/GID (compatible with Kubernetes securityContext)
# Using UID 65532 to match distroless nonroot UID for future migration compatibility
RUN groupadd -g 65532 fraiseql && \
    useradd -r -u 65532 -g fraiseql -s /sbin/nologin -c "FraiseQL User" fraiseql

# Create necessary directories with proper permissions
RUN mkdir -p /app /tmp /var/cache && \
    chown -R fraiseql:fraiseql /app /tmp /var/cache && \
    chmod 1777 /tmp

# Copy wheels from builder
COPY --from=builder /build/dist/*.whl /tmp/wheels/

# Install FraiseQL and production dependencies
RUN pip install --no-cache-dir \
    /tmp/wheels/*.whl \
    uvicorn[standard] \
    gunicorn \
    prometheus-client \
    opentelemetry-api \
    opentelemetry-sdk \
    opentelemetry-exporter-otlp \
    opentelemetry-instrumentation-fastapi \
    opentelemetry-instrumentation-psycopg \
    && rm -rf /tmp/wheels

# Set working directory
WORKDIR /app

# Copy application files (if any)
# COPY --chown=fraiseql:fraiseql app /app

# Switch to non-root user
USER fraiseql

# Expose port
EXPOSE 8000

# Health check (will fail with read-only filesystem if /tmp not writable)
HEALTHCHECK --interval=30s --timeout=3s --start-period=10s --retries=3 \
    CMD python -c "import urllib.request; urllib.request.urlopen('http://localhost:8000/health').read()" || exit 1

# Set environment variables for production
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    FRAISEQL_PRODUCTION=true \
    PYTHONPATH=/usr/local/lib/python3.13/site-packages

# Default command (can be overridden)
CMD ["gunicorn", "app:app", "-w", "4", "-k", "uvicorn.workers.UvicornWorker", "--bind", "0.0.0.0:8000"]

