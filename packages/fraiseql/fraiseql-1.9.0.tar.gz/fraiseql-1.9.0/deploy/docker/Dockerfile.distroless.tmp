# syntax=docker/dockerfile:1.4

# Multi-stage Dockerfile for FraiseQL - Government-Grade Security
# Optimized for government agency compliance with minimal attack surface

# =============================================================================
# Stage 1: Builder (with full toolchain)
# =============================================================================
FROM python:3.13-slim AS builder

# Install build dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    gcc \
    g++ \
    libpq-dev \
    curl \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/*

# Install Rust for fraiseql_rs compilation
RUN curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh -s -- -y
ENV PATH="/root/.cargo/bin:${PATH}"

# Set working directory
WORKDIR /build

# Copy dependency files first for better caching
COPY pyproject.toml README.md Cargo.toml Cargo.lock ./
COPY src ./src
COPY fraiseql_rs ./fraiseql_rs

# Build fraiseql-confiture wheel first (no cp313-manylinux on PyPI yet)
RUN pip install build maturin && \
    mkdir -p /build/dist && \
    pip download --no-deps --dest /tmp fraiseql-confiture>=0.1.0 && \
    cd /tmp && \
    tar -xzf fraiseql_confiture-*.tar.gz && \
    cd fraiseql_confiture-*/ && \
    python -m build --wheel && \
    mv dist/*.whl /build/dist/

# Build FraiseQL wheel
RUN python -m build --wheel

# Install all dependencies into a clean directory for copying
RUN pip install --prefix=/install --no-warn-script-location \
    /build/dist/*.whl \
    /build/dist/fraiseql*.whl \
    uvicorn[standard] \
    gunicorn \
    prometheus-client \
    opentelemetry-api \
    opentelemetry-sdk \
    opentelemetry-exporter-otlp \
    opentelemetry-instrumentation-fastapi \
    opentelemetry-instrumentation-psycopg

# =============================================================================
# Stage 2: Runtime Dependencies Installer
# =============================================================================
FROM python:3.13-slim AS runtime-deps

# Install only runtime PostgreSQL library
RUN apt-get update && apt-get install -y --no-install-recommends \
    libpq5 \
    && rm -rf /var/lib/apt/lists/*

# Copy installed Python packages from builder
COPY --from=builder /install /usr/local

# =============================================================================
# Stage 3: Distroless Runtime (PRODUCTION - Government Grade)
# =============================================================================
FROM gcr.io/distroless/python3-debian12:nonroot AS production

# Labels for compliance and metadata
LABEL org.opencontainers.image.authors="FraiseQL Team" \
      org.opencontainers.image.version="1.8.0-beta.4" \
      org.opencontainers.image.description="Government-grade GraphQL-to-PostgreSQL framework" \
      org.opencontainers.image.vendor="FraiseQL Project" \
      org.opencontainers.image.licenses="MIT" \
      security.compliance="Government Agency Ready" \
      security.scan.trivy="enabled" \
      security.sbom="generated"

# Copy Python runtime and libraries from runtime-deps
COPY --from=runtime-deps /usr/local/lib/python3.13 /usr/local/lib/python3.13
COPY --from=runtime-deps /usr/local/bin /usr/local/bin
COPY --from=runtime-deps /usr/lib/x86_64-linux-gnu/libpq.so* /usr/lib/x86_64-linux-gnu/

# Set working directory
WORKDIR /app

# Copy entrypoint script (note: distroless doesn't have sh, must be Python-based)
COPY deploy/docker/entrypoint.py /app/entrypoint.py

# Set environment variables for production
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    FRAISEQL_PRODUCTION=true \
    PYTHONPATH=/usr/local/lib/python3.13/site-packages

# Expose port
EXPOSE 8000

# Distroless runs as non-root by default (UID 65532)
# No USER directive needed

# Entrypoint (Python-based, since no shell in distroless)
ENTRYPOINT ["python3", "/app/entrypoint.py"]

# Default command
CMD ["gunicorn", "app:app", "-w", "4", "-k", "uvicorn.workers.UvicornWorker", "--bind", "0.0.0.0:8000"]

# =============================================================================
# Stage 4: Distroless Debug (For troubleshooting only)
# =============================================================================
FROM gcr.io/distroless/python3-debian12:debug-nonroot AS debug

# Labels
LABEL org.opencontainers.image.authors="FraiseQL Team" \
      org.opencontainers.image.version="1.8.0-beta.4-debug" \
      org.opencontainers.image.description="Debug build with busybox shell" \
      security.warning="DEBUG BUILD - NOT FOR PRODUCTION"

# Copy everything from production stage
COPY --from=production /usr/local /usr/local
COPY --from=production /usr/lib/x86_64-linux-gnu/libpq.so* /usr/lib/x86_64-linux-gnu/
COPY --from=production /app /app

WORKDIR /app

ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    FRAISEQL_PRODUCTION=true \
    PYTHONPATH=/usr/local/lib/python3.13/site-packages

EXPOSE 8000

# Debug image has busybox shell at /busybox/sh
ENTRYPOINT ["python3", "/app/entrypoint.py"]
CMD ["gunicorn", "app:app", "-w", "4", "-k", "uvicorn.workers.UvicornWorker", "--bind", "0.0.0.0:8000"]

# =============================================================================
# USAGE INSTRUCTIONS
# =============================================================================
#
# Build production image (minimal attack surface):
#   docker build --target production -t fraiseql:latest-distroless -f Dockerfile.distroless .
#
# Build debug image (includes busybox shell for troubleshooting):
#   docker build --target debug -t fraiseql:debug-distroless -f Dockerfile.distroless .
#
# Scan for vulnerabilities:
#   trivy image fraiseql:latest-distroless
#
# Generate SBOM:
#   syft fraiseql:latest-distroless -o spdx-json > fraiseql-sbom.spdx.json
#
# Security Features:
#   ✓ No shell, no package manager, no utilities
#   ✓ Runs as non-root user (UID 65532)
#   ✓ Minimal attack surface (~90% fewer CVEs vs slim)
#   ✓ Read-only root filesystem compatible
#   ✓ Distroless base maintained by Google
#   ✓ Python 3.13 runtime with all dependencies
#
# Government Compliance:
#   ✓ Meets NIST 800-53 container security controls
#   ✓ Defense-in-depth architecture
#   ✓ Minimal trusted computing base
#   ✓ Regular security updates from Google
#   ✓ SBOM generation support
#   ✓ Audit trail via image labels
#
