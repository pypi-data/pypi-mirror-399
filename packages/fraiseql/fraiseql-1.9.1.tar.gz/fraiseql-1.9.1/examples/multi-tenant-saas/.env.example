# Database Configuration
DATABASE_URL=postgresql://localhost/multi_tenant_saas

# JWT Authentication
JWT_SECRET=your-secret-key-change-in-production
JWT_ALGORITHM=HS256

# Security Profile
# Options: STANDARD, REGULATED, RESTRICTED
SECURITY_PROFILE=REGULATED

# Application
HOST=0.0.0.0
PORT=8000
DEBUG=false

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Rate Limiting (per organization per hour)
RATE_LIMIT_PER_ORG=1000

# Logging
LOG_LEVEL=INFO
