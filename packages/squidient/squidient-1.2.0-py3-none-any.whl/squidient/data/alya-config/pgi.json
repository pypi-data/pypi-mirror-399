{
    "pgi": {
        "configuration": {
            "cc": "cc -c",
            "extralib": "-lc",
            "f77": "OMPI_FC=pgfortran mpif90",
            "f90": "OMPI_FC=pgfortran mpif90",
            "fa2p": "pgfortran -c -Mpreprocess -Mbackslash  -Mextend -Mnoopenmp -Munroll -Mnoidiom -DMPI_OFF -module ../../Utils/user/alya2pos -I../../Utils/user/alya2pos",
            "fa2plk": "pgfortran -lc -module ../../Utils/user/alya2pos",
            "ipo": false,
            "metis5_cc": "pgcc",
            "metis_cc": "pgcc",
            "ndimepar": false,
            "objects": "-c -fast -Minfo=all -Mpreprocess -I./Objects_x/ -Mbackslash  -Mextend -Mnoopenmp -Munroll -Mnoidiom -module $O",
            "optimization": "-O3",
            "vector": 16
        },
        "modules": [
            "turbul",
            "solidz",
            "nastin",
            "alefor",
            "magnet",
            "partis",
            "levels",
            "fakemo",
            "chemic",
            "nastal",
            "temper",
            "exmedi"
        ]
    },
    "pgi-i4": {
        "configuration": {
            "libmetis": "-L../../Thirdparties/metis-4.0 -lmetis",
            "metis": "4"
        },
        "from": "pgi",
        "precompilation": [
            "metis4",
            "alya2pos"
        ]
    },
    "pgi-i4-openmp": {
        "configuration": {
            "openmp": "-mp"
        },
        "from": "pgi-i4"
    }
}
