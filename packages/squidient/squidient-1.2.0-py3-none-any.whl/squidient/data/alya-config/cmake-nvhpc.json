{
    "nvhpc": {
        "configuration": {
            "SHARED": false,
            "WITH_CODE_COVERAGE": false,
            "WITH_LIBRARIES_ONLY": false,
            "WITH_STD2008": true,
            "WITH_METIS": true
        },
        "type": "cmake"
    },
    "nvhpc-i4": {
        "configuration": {
            "CMAKE_BUILD_TYPE": "Release",
            "INTEGER_SIZE": 4,
            "OPTIMIZATION_LEVEL": 2,
            "VECTOR_SIZE_CPU": 16,
            "OPENACC_VECTOR_SIZE_CPU": 16,
            "OPENACC_VECTOR_SIZE_GPU": 128000,
            "WITH_MPI": true,
            "WITH_NDIMEPAR": false
        },
        "from": "nvhpc"
    },
    "nvhpc-i4-gpu": {
        "configuration": {
            "WITH_OPENACC": true,
            "OPENACC_TARGET": "GPU",
            "OPENACC_MANAGED": false
        },
        "from": "nvhpc-i4"
    },
    "nvhpc-i4-gpu-ndimepar": {
        "configuration":{
            "WITH_NDIMEPAR": true
        },
	"from": "nvhpc-i4-gpu"
    },
    "nvhpc-i4-gpu-ndimepar-vecsize2048k":{
	"configuration":{
	    "OPENACC_VECTOR_SIZE_GPU": 2048000
	},
	"from": "nvhpc-i4-gpu-ndimepar"
    },
    "nvhpc-i4-cuda": {
        "configuration": {
            "CMAKE_CUDA_ARCHITECTURES": 90
        },
        "from": "nvhpc-i4-gpu"
    }
}
