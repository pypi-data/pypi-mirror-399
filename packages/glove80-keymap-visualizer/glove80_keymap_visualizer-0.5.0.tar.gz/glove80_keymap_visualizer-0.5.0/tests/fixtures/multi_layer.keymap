/*
 * Multi-layer Glove80 keymap for testing
 */

#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>

#define LAYER_Base 0
#define LAYER_Lower 1
#define LAYER_Raise 2
#define LAYER_Adjust 3

/ {
    keymap {
        compatible = "zmk,keymap";

        layer_Base {
            bindings = <
                &kp F1    &kp F2    &kp F3    &kp F4    &kp F5                                                                                      &kp F6    &kp F7    &kp F8    &kp F9    &kp F10
                &kp EQUAL &kp N1    &kp N2    &kp N3    &kp N4    &kp N5                                                                  &kp N6    &kp N7    &kp N8    &kp N9    &kp N0    &kp MINUS
                &kp TAB   &kp Q     &kp W     &kp E     &kp R     &kp T                                                                   &kp Y     &kp U     &kp I     &kp O     &kp P     &kp BSLH
                &kp ESC   &kp A     &kp S     &kp D     &kp F     &kp G                                                                   &kp H     &kp J     &kp K     &kp L     &kp SEMI  &kp SQT
                &kp LSHFT &kp Z     &kp X     &kp C     &kp V     &kp B     &mo LAYER_Lower &kp LALT &kp LGUI &kp RGUI &kp RALT &mo LAYER_Raise &kp N &kp M   &kp COMMA &kp DOT   &kp FSLH  &kp RSHFT
                &kp GRAVE &kp CAPS  &kp LEFT  &kp RIGHT &kp BSPC            &kp DEL   &kp HOME  &kp END   &kp PG_UP &kp PG_DN &kp ENTER             &kp SPACE &kp UP    &kp DOWN  &kp LBKT  &kp RBKT
            >;
        };

        layer_Lower {
            bindings = <
                &trans    &trans    &trans    &trans    &trans                                                                                      &trans    &trans    &trans    &trans    &trans
                &trans    &kp F1    &kp F2    &kp F3    &kp F4    &kp F5                                                                  &kp F6    &kp F7    &kp F8    &kp F9    &kp F10   &kp F11
                &trans    &kp EXCL  &kp AT    &kp HASH  &kp DLLR  &kp PRCNT                                                               &kp CARET &kp AMPS  &kp ASTRK &kp LPAR  &kp RPAR  &kp F12
                &trans    &trans    &trans    &trans    &trans    &trans                                                                  &trans    &kp UNDER &kp PLUS  &kp LBRC  &kp RBRC  &kp PIPE
                &trans    &trans    &trans    &trans    &trans    &trans    &trans    &trans    &trans    &trans    &trans    &mo LAYER_Adjust &trans &trans  &trans    &trans    &trans    &trans
                &trans    &trans    &trans    &trans    &trans              &trans    &trans    &trans    &trans    &trans    &trans              &trans    &trans    &trans    &trans    &trans
            >;
        };

        layer_Raise {
            bindings = <
                &trans    &trans    &trans    &trans    &trans                                                                                      &trans    &trans    &trans    &trans    &trans
                &trans    &kp F1    &kp F2    &kp F3    &kp F4    &kp F5                                                                  &kp F6    &kp F7    &kp F8    &kp F9    &kp F10   &kp F11
                &trans    &kp N1    &kp N2    &kp N3    &kp N4    &kp N5                                                                  &kp N6    &kp N7    &kp N8    &kp N9    &kp N0    &kp F12
                &trans    &trans    &trans    &trans    &trans    &trans                                                                  &trans    &kp MINUS &kp EQUAL &kp LBKT  &kp RBKT  &kp BSLH
                &trans    &trans    &trans    &trans    &trans    &trans    &mo LAYER_Adjust &trans &trans &trans &trans &trans          &trans    &trans    &trans    &trans    &trans    &trans
                &trans    &trans    &trans    &trans    &trans              &trans    &trans    &trans    &trans    &trans    &trans              &trans    &trans    &trans    &trans    &trans
            >;
        };

        layer_Adjust {
            bindings = <
                &none     &none     &none     &none     &none                                                                                       &none     &none     &none     &none     &none
                &none     &none     &none     &none     &none     &none                                                                   &none     &none     &none     &none     &none     &none
                &none     &none     &none     &none     &none     &none                                                                   &none     &none     &none     &none     &none     &none
                &none     &none     &none     &none     &none     &none                                                                   &none     &none     &none     &none     &none     &none
                &none     &none     &none     &none     &none     &none     &trans    &none     &none     &none     &none     &trans      &none     &none     &none     &none     &none     &none
                &none     &none     &none     &none     &none               &none     &none     &none     &none     &none     &none                 &none     &none     &none     &none     &none
            >;
        };
    };
};
