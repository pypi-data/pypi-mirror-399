# MANIFEST.in for llcuda v1.1.0 (Thin package with hybrid bootstrap)

# Documentation
include README.md
include LICENSE
include CHANGELOG.md

# Directory placeholders (CRITICAL - include .gitkeep files to preserve structure)
include llcuda/binaries/.gitkeep
include llcuda/binaries/cuda12/.gitkeep
include llcuda/lib/.gitkeep
include llcuda/models/.gitkeep

# Internal modules (bootstrap downloader)
recursive-include llcuda/_internal *.py

# Python package files
include pyproject.toml
include setup.py

# EXCLUDE binaries and models (downloaded on first import)
global-exclude *.so
global-exclude *.so.*
global-exclude llama-*
global-exclude *.gguf
global-exclude *.bin

# Exclude unwanted files
global-exclude *.pyc
global-exclude __pycache__
global-exclude *.pyo
global-exclude .DS_Store
global-exclude .git*
global-exclude *.swp
global-exclude *.bak
recursive-exclude llcuda/__pycache__ *
