{
  "name": "typedown-vscode-integration",
  "displayName": "Typedown Integration",
  "description": "Progressive Formalization for Markdown",
  "version": "0.2.3",
  "repository": {
    "type": "git",
    "url": "https://github.com/IndenScale/Typedown.git"
  },
  "publisher": "Typedown",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Linters"
  ],
  "activationEvents": [
    "onLanguage:markdown",
    "onLanguage:typedown"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "markdown",
        "extensions": [
          ".md",
          ".markdown",
          ".mdown",
          ".mkdn",
          ".mkd",
          ".mdwn",
          ".mdtxt",
          ".mdtext",
          ".td"
        ]
      }
    ],
    "grammars": [
      {
        "language": "markdown",
        "scopeName": "markdown.typedown.injection",
        "path": "./syntaxes/typedown.tmLanguage.json",
        "injectTo": [
          "text.html.markdown"
        ]
      }
    ],
    "commands": [
      {
        "command": "typedown.restartLsp",
        "title": "Typedown: Restart Language Server",
        "category": "Typedown"
      }
    ],
    "configuration": {
      "title": "Typedown",
      "properties": {
        "typedown.server.command": {
          "type": "string",
          "default": "uv",
          "description": "The command to run the Typedown language server (e.g. 'uv', 'python')."
        },
        "typedown.server.args": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "run",
            "--extra",
            "server",
            "td",
            "lsp"
          ],
          "description": "Arguments passed to the server command."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w"
  },
  "devDependencies": {
    "@types/vscode": "^1.75.0",
    "@types/node": "^16.11.7",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "vscode-languageclient": "^8.1.0"
  }
}
