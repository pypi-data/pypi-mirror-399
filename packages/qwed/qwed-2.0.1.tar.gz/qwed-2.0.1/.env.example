# =======================================================
# QWED Environment Configuration
# Copy this file to .env and replace with your actual keys
# Documentation: https://docs.qwedai.com/docs/getting-started/llm-configuration
# =======================================================

# ================================
# Core QWED Configuration
# ================================
QWED_API_KEY=qwed_your_key_here

# ================================
# LLM Provider Selection
# ================================
# Choose one: openai, anthropic, google, azure, ollama, custom
QWED_LLM_PROVIDER=openai

# LLM Settings (applies to all providers)
QWED_LLM_MODEL=gpt-4o
QWED_LLM_TEMPERATURE=0.0      # Keep at 0 for deterministic translation
QWED_LLM_MAX_TOKENS=1000

# ================================
# Provider-Specific API Keys
# ================================

# OpenAI (https://platform.openai.com/api-keys)
OPENAI_API_KEY=sk-your-openai-key-here

# Anthropic (https://console.anthropic.com/)
# ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# Google Gemini (https://aistudio.google.com/apikey)
# GOOGLE_API_KEY=AIzaSy-your-google-key-here

# Azure OpenAI
# AZURE_OPENAI_API_KEY=your-azure-key-here
# AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
# AZURE_OPENAI_DEPLOYMENT=gpt-4
# AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Ollama (local LLMs)
# OLLAMA_BASE_URL=http://localhost:11434

# Custom OpenAI-compatible API (vLLM, LiteLLM, etc.)
# QWED_LLM_BASE_URL=http://your-server:8000/v1
# QWED_LLM_API_KEY=your-custom-key

# ================================
# Database Configuration
# ================================

# Development (SQLite)
DATABASE_URL=sqlite:///./qwed.db

# Production (PostgreSQL) - Uncomment for production
# DATABASE_URL=postgresql://qwed:password@localhost:5432/qwed_db

# ================================
# Redis (Caching & Rate Limiting)
# ================================
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=10
REDIS_SOCKET_TIMEOUT=5.0

# ================================
# Rate Limiting
# ================================
QWED_RATE_LIMIT_ENABLED=true
QWED_RATE_LIMIT_PER_MINUTE=60

# ================================
# Caching
# ================================
QWED_CACHE_ENABLED=true
QWED_CACHE_TTL_SECONDS=3600

# ================================
# Security Settings
# ================================
QWED_MAX_QUERY_LENGTH=10000
QWED_ALLOWED_ENGINES=math,logic,code,sql,stats,fact,image,reasoning

# ================================
# Agent Settings
# ================================
MAX_DAILY_COST=10.0

# ================================
# Docker Sandbox (Stats/Code Engines)
# ================================
# DOCKER_HOST=unix:///var/run/docker.sock
# QWED_SANDBOX_IMAGE=python:3.10-slim
# QWED_SANDBOX_TIMEOUT=10
# QWED_SANDBOX_MEMORY_LIMIT=512m

# ================================
# Observability (Enterprise)
# ================================
OTEL_ENABLED=false
# OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=qwed-api
ENVIRONMENT=development
# LOG_LEVEL=info

# ================================
# Service URLs (Docker Compose)
# ================================
# PROMETHEUS_URL=http://localhost:9090
# GRAFANA_URL=http://localhost:3000
# JAEGER_URL=http://localhost:16686
