include README.md
include LICENSE
include METHOD_DOCUMENTATION.md
include requirements.txt
include setup.py

# Include all Python source files
recursive-include mle_runtime *.py
recursive-include mle_runtime *.pyd
recursive-include mle_runtime *.so
recursive-include mle_runtime *.dll

# Include C++ core files
recursive-include cpp_core *.cpp
recursive-include cpp_core *.h
recursive-include cpp_core *.hpp
recursive-include cpp_core *.cu
recursive-include cpp_core CMakeLists.txt

# Include documentation
recursive-include documentation *.md

# Include tests
recursive-include tests *.py

# Exclude unnecessary files
global-exclude *.pyc
global-exclude *.pyo
global-exclude *~
global-exclude .git*
global-exclude .DS_Store
global-exclude __pycache__
recursive-exclude * __pycache__
recursive-exclude * *.py[co]