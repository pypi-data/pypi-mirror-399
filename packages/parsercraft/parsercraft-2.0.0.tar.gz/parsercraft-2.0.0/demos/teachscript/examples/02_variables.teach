# TeachScript Example: Variables and Math
# Demonstrates variable declaration and arithmetic

remember name = "Alice"
remember age = 25
remember height = 5.8

say("Name:", name)
say("Age:", age)
say("Height:", height, "feet")

# Math operations
remember x = 10
remember y = 3

say("\nMath with", x, "and", y)
say("Addition:", x + y)
say("Subtraction:", x - y)
say("Multiplication:", x * y)
say("Division:", x / y)
say("Modulo:", x % y)
say("Exponentiation:", x ** y)
