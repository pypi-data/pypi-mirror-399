{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://lumyn.dev/schemas/decision_record.v1.schema.json",
  "title": "Lumyn DecisionRecord (v1)",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "decision_id",
    "created_at",
    "request",
    "policy",
    "verdict",
    "reason_codes",
    "matched_rules",
    "risk_signals",
    "queries",
    "obligations",
    "determinism",
    "extensions"
  ],
  "properties": {
    "schema_version": { "type": "string", "const": "decision_record.v1" },
    "decision_id": { "type": "string", "minLength": 1 },
    "created_at": { "type": "string", "minLength": 1 },
    "trace": { "type": "object", "additionalProperties": true, "default": {} },
    "context_ref": {
      "type": "object",
      "description": "Optional upstream Context Record reference (e.g. Fabra) for record-chain linkage.",
      "additionalProperties": false,
      "properties": {
        "context_id": { "type": "string", "minLength": 1 },
        "record_hash": { "type": "string", "pattern": "^sha256:[0-9a-f]{64}$" }
      },
      "minProperties": 1
    },
    "interaction_ref": { "$ref": "#/$defs/interaction_ref_v0" },
    "request": { "$ref": "#/$defs/decision_request_v1" },
    "policy": {
      "type": "object",
      "additionalProperties": false,
      "required": ["policy_id", "policy_version", "policy_hash", "mode"],
      "properties": {
        "policy_id": { "type": "string", "minLength": 1 },
        "policy_version": { "type": "string", "minLength": 1 },
        "policy_hash": { "type": "string", "pattern": "^sha256:[0-9a-f]{64}$" },
        "mode": { "type": "string", "enum": ["enforce", "advisory"] }
      }
    },
    "verdict": { "type": "string", "enum": ["ALLOW", "DENY", "ABSTAIN", "ESCALATE"] },
    "reason_codes": { "type": "array", "items": { "type": "string" }, "default": [] },
    "matched_rules": { "type": "array", "items": { "type": "object" }, "default": [] },
    "risk_signals": { "type": "object", "additionalProperties": true, "default": {} },
    "queries": { "type": "array", "items": { "type": "object" }, "default": [] },
    "obligations": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": true,
        "required": ["type"],
        "properties": {
          "type": { "type": "string" },
          "title": { "type": "string" },
          "details": { "type": "string" },
          "source": { "type": "object", "additionalProperties": true }
        }
      },
      "default": []
    },
    "determinism": { "type": "object", "additionalProperties": true, "default": {} },
    "extensions": { "type": "object", "additionalProperties": true, "default": {} }
  },
  "$defs": {
    "interaction_ref_v0": {
      "title": "InteractionRef (v0)",
      "type": "object",
      "additionalProperties": false,
      "required": ["schema_version", "mode"],
      "properties": {
        "schema_version": { "type": "string", "const": "interaction_ref.v0" },
        "mode": { "type": "string", "enum": ["voice", "chat"] },
        "session_id": { "type": "string", "minLength": 1 },
        "call_id": { "type": "string", "minLength": 1 },
        "turn_id": { "type": "string", "minLength": 1 },
        "turn_index": { "type": "integer", "minimum": 0 },
        "turn_started_at": { "type": "string", "minLength": 1 },
        "turn_ended_at": { "type": "string", "minLength": 1 },
        "jurisdiction": { "type": "string", "minLength": 1 },
        "consent_state": {
          "type": "string",
          "enum": ["unknown", "granted", "denied", "revoked"]
        },
        "redaction_mode": { "type": "string", "enum": ["default", "strict", "off"] },
        "retention": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "policy": { "type": "string", "minLength": 1 },
            "expires_at": { "type": "string", "minLength": 1 }
          }
        },
        "timeline": {
          "type": "array",
          "description": "Append-only event log in canonical order; do not mutate past events.",
          "items": { "$ref": "#/$defs/interaction_ref_v0_timeline_event" },
          "default": []
        }
      }
    },
    "interaction_ref_v0_timeline_event": {
      "type": "object",
      "additionalProperties": false,
      "required": ["index", "at", "type"],
      "properties": {
        "index": {
          "type": "integer",
          "minimum": 0,
          "description": "Canonical ordering key: strictly increasing within the interaction."
        },
        "at": { "type": "string", "minLength": 1 },
        "type": { "type": "string", "minLength": 1 },
        "data": { "type": "object", "additionalProperties": true, "default": {} },
        "digest": { "type": "string", "pattern": "^sha256:[0-9a-f]{64}$" }
      }
    },
    "decision_request_v1": {
      "title": "Lumyn DecisionRequest (v1)",
      "type": "object",
      "additionalProperties": false,
      "required": ["schema_version", "subject", "action", "context"],
      "properties": {
        "schema_version": { "type": "string", "const": "decision_request.v1" },
        "request_id": { "type": "string", "description": "Optional idempotency key (ULID/UUID)." },
        "trace": {
          "type": "object",
          "additionalProperties": false,
          "properties": { "correlation_id": { "type": "string" }, "span_id": { "type": "string" } }
        },
        "tenant": {
          "type": "object",
          "additionalProperties": false,
          "required": ["tenant_id"],
          "properties": {
            "tenant_id": { "type": "string", "minLength": 1 },
            "environment": { "type": "string", "enum": ["dev", "staging", "prod"] }
          }
        },
        "subject": {
          "type": "object",
          "additionalProperties": false,
          "required": ["type", "id"],
          "properties": {
            "type": { "type": "string", "enum": ["service", "agent", "user", "job"] },
            "id": { "type": "string", "minLength": 1 },
            "tenant_id": { "type": "string" },
            "ip": { "type": "string" },
            "user_agent": { "type": "string" },
            "roles": { "type": "array", "items": { "type": "string" }, "default": [] }
          }
        },
        "action": {
          "type": "object",
          "additionalProperties": false,
          "required": ["type", "intent"],
          "properties": {
            "type": {
              "type": "string",
              "description": "Namespaced action type, e.g. support.refund, support.close_ticket.",
              "pattern": "^[a-z0-9]+(\\.[a-z0-9_]+)+$"
            },
            "intent": { "type": "string", "minLength": 1 },
            "target": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "system": { "type": "string" },
                "resource_type": { "type": "string" },
                "resource_id": { "type": "string" }
              }
            },
            "amount": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "value": { "type": "number" },
                "currency": { "type": "string", "minLength": 3, "maxLength": 3 }
              }
            },
            "tags": { "type": "array", "items": { "type": "string" }, "default": [] }
          }
        },
        "evidence": {
          "type": "object",
          "description": "Caller-provided structured signals; Lumyn does not fetch external data in v1.",
          "additionalProperties": true,
          "default": {}
        },
        "context": {
          "type": "object",
          "additionalProperties": false,
          "required": ["mode", "digest"],
          "properties": {
            "mode": { "type": "string", "enum": ["digest_only", "inline", "reference"] },
            "digest": { "type": "string", "pattern": "^sha256:[0-9a-f]{64}$" },
            "ref": {
              "type": "object",
              "additionalProperties": false,
              "required": ["kind", "id"],
              "properties": { "kind": { "type": "string" }, "id": { "type": "string" }, "uri": { "type": "string" } }
            },
            "inline": { "type": "object", "additionalProperties": true },
            "redaction": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "profile": { "type": "string", "description": "default|strict|off" },
                "fields_removed": { "type": "array", "items": { "type": "string" }, "default": [] }
              }
            }
          },
          "allOf": [
            { "if": { "properties": { "mode": { "const": "inline" } } }, "then": { "required": ["inline"] } },
            { "if": { "properties": { "mode": { "const": "reference" } } }, "then": { "required": ["ref"] } }
          ]
        },
        "context_ref": {
          "type": "object",
          "description": "Optional upstream Context Record reference (e.g. Fabra) for record-chain linkage.",
          "additionalProperties": false,
          "properties": {
            "context_id": { "type": "string", "minLength": 1 },
            "record_hash": { "type": "string", "pattern": "^sha256:[0-9a-f]{64}$" }
          },
          "minProperties": 1
        },
        "interaction_ref": { "$ref": "#/$defs/interaction_ref_v0" },
        "policy": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "policy_id": { "type": "string" },
            "policy_version": { "type": "string" },
            "mode": { "type": "string", "enum": ["enforce", "advisory"] }
          }
        },
        "hints": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "mode": { "type": "string", "enum": ["enforce", "advisory"] },
            "dry_run": { "type": "boolean", "default": false }
          }
        },
        "extensions": { "type": "object", "additionalProperties": true, "default": {} }
      }
    }
  }
}
