# Default environment configuration for local development.
# Copy this file to `.env` and adjust values as needed.
# ORCHEO_API_URL=http://localhost:8000  # Optional: defaults to http://localhost:8000
ORCHEO_HOST=0.0.0.0
ORCHEO_PORT=8000
ORCHEO_CHECKPOINT_BACKEND=sqlite
ORCHEO_SQLITE_PATH=~/.orcheo/orcheo.sqlite3
ORCHEO_REPOSITORY_BACKEND=sqlite
ORCHEO_REPOSITORY_SQLITE_PATH=~/.orcheo/workflows.sqlite

# Credential vault configuration
ORCHEO_VAULT_BACKEND=file
# ORCHEO_VAULT_ENCRYPTION_KEY=  # Optional override (auto-generated and stored next to the vault when empty)
# ORCHEO_VAULT_LOCAL_PATH=~/.orcheo/vault.sqlite
# ORCHEO_VAULT_AWS_REGION=
# ORCHEO_VAULT_AWS_KMS_KEY_ID=
# ORCHEO_VAULT_TOKEN_TTL_SECONDS=3600  # Token expiration time in seconds
