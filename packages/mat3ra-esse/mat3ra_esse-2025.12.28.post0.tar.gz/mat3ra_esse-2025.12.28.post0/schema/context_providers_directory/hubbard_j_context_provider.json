{
    "$id": "context-providers-directory/hubbard-j-context-provider",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Hubbard J Context Provider Schema",
    "description": "Hubbard parameters for DFT+U+J calculation.",
    "type": "array",
    "minItems": 1,
    "items": {
        "type": "object",
        "properties": {
            "paramType": {
                "type": "string",
                "title": "Species",
                "enum": [
                    "U",
                    "J",
                    "B",
                    "E2",
                    "E3"
                ]
            },
            "atomicSpecies": {
                "type": "string",
                "title": "Species"
            },
            "atomicOrbital": {
                "type": "string",
                "title": "Orbital"
            },
            "value": {
                "type": "number",
                "title": "Value (eV)"
            }
        }
    }
}
