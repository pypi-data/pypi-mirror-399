{
    "$id": "context-providers-directory/hubbard-v-context-provider",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Hubbard V Context Provider Schema",
    "description": "Hubbard V parameters for DFT+U+V calculation.",
    "type": "array",
    "minItems": 1,
    "items": {
        "type": "object",
        "properties": {
            "atomicSpecies": {
                "type": "string",
                "title": "Species 1"
            },
            "siteIndex": {
                "type": "integer",
                "title": "Site no 1"
            },
            "atomicOrbital": {
                "type": "string",
                "title": "Orbital 1"
            },
            "atomicSpecies2": {
                "type": "string",
                "title": "Species 2"
            },
            "siteIndex2": {
                "type": "integer",
                "title": "Site no 2"
            },
            "atomicOrbital2": {
                "type": "string",
                "title": "Orbital 2"
            },
            "hubbardVValue": {
                "type": "number",
                "title": "V (eV)"
            }
        }
    }
}
