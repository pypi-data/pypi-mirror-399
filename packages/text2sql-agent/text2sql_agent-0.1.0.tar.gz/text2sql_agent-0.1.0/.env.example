# SQL Agent Toolkit - Environment Variables Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# General database connection (used by most examples)
# Examples: basic_usage.py, medical_example.py
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://user:password@localhost:5432/your_database

# Medical PostgreSQL database (for Ollama medical example)
# Used by: examples/ollama/test_postgresql_medical.py
DATABASE_URL_MEDICAL=postgresql://user:password@localhost:5432/medical_db

# E-commerce MySQL database (for Ollama e-commerce example)
# Used by: examples/ollama/test_mysql_ecommerce.py
DATABASE_URL_ECOMMERCE=mysql+pymysql://user:password@127.0.0.1:3306/ecom

# =============================================================================
# LLM API KEYS
# =============================================================================

# OpenAI API Key
# Get yours at: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key (for Claude models)
# Get yours at: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google AI API Key (for Gemini models)
# Get yours at: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_google_api_key_here

# =============================================================================
# AWS BEDROCK CONFIGURATION
# =============================================================================

# AWS credentials (for AWS Bedrock models)
# You can use AWS credentials OR AWS profile (not both)

# Option 1: AWS Credentials
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key

# Option 2: AWS Profile (alternative to credentials)
# AWS_PROFILE=your_aws_profile_name

# AWS Region for Bedrock
AWS_DEFAULT_REGION=us-east-1

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================

# Enable verbose mode for debugging (true/false)
# VERBOSE=false

# Maximum rows to return to LLM for analysis
# MAX_ROWS_FOR_LLM=10

# Maximum iterations for agent
# MAX_ITERATIONS=10
