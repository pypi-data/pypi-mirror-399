# Environment Variables for Fluxibly Framework
# Copy this file to .env and fill in your values

# OpenAI API Key (for orchestrator LLM)
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration
# Backend type: "mock" (in-memory) or "postgresql" (persistent database)
DB_BACKEND=mock

# PostgreSQL Database Settings (only needed when DB_BACKEND=postgresql)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=fluxibly
DB_USER=postgres
DB_PASSWORD=your_password_here

# Database Connection Pool
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# State Management Configuration
# Enable database persistence for conversation history
ENABLE_DB_PERSISTENCE=false

# Default identifiers for conversation threads
DEFAULT_USER_ID=default_user
DEFAULT_ORG_ID=default_org
