[tool.poetry]
name = "kryten-userstats"
version = "0.5.8"
description = "User statistics tracking microservice for CyTube channels"
authors = ["Your Name <your.email@example.com>"]
license = "MIT"
readme = "README.md"
homepage = "https://github.com/yourusername/kryten-userstats"
repository = "https://github.com/yourusername/kryten-userstats"
documentation = "https://github.com/yourusername/kryten-userstats/blob/main/README.md"
keywords = ["cytube", "statistics", "tracking", "microservice", "nats", "prometheus"]
classifiers = [
    "Development Status :: 4 - Beta",
    "Intended Audience :: Developers",
    "License :: OSI Approved :: MIT License",
    "Programming Language :: Python :: 3",
    "Programming Language :: Python :: 3.10",
    "Programming Language :: Python :: 3.11",
    "Programming Language :: Python :: 3.12",
    "Topic :: Communications :: Chat",
    "Topic :: Software Development :: Libraries :: Python Modules",
]
packages = [{include = "userstats"}]

[tool.poetry.dependencies]
python = "^3.10"
kryten-py = ">=0.9.10"
aiohttp = "^3.9.0"

[tool.poetry.group.dev.dependencies]
pytest = "^7.4.0"
pytest-asyncio = "^0.21.0"
pytest-cov = "^4.1.0"
black = "^23.7.0"
ruff = "^0.0.285"
mypy = "^1.5.0"

[tool.poetry.scripts]
kryten-userstats = "userstats.__main__:main"

[build-system]
requires = ["poetry-core"]
build-backend = "poetry.core.masonry.api"

[tool.black]
line-length = 120
target-version = ['py311']

[tool.ruff]
line-length = 120
target-version = "py310"
select = ["E", "F", "I", "N", "W", "UP"]
ignore = ["UP017"]  # Ignore datetime.UTC suggestion for Python 3.10 compatibility

[tool.mypy]
python_version = "3.11"
warn_return_any = true
warn_unused_configs = true
disallow_untyped_defs = false
ignore_missing_imports = true

[[tool.mypy.overrides]]
module = "userstats.main"
# These attributes are always initialized before use in event handlers
disable_error_code = ["union-attr"]

[tool.pytest.ini_options]
asyncio_mode = "auto"
testpaths = ["tests"]
