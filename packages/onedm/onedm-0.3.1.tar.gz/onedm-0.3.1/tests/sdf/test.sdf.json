    "license": "https://example.com/license"
  },
  "namespace": {
    "cap": "https://example.com/capability/cap",
    "ocf": "https://onedm.org/ecosystem/ocf"
  },
  "defaultNamespace": "cap",
  "sdfProperty": {
    "torque": {
      "sdfRef": "ocf:#/sdfObject/torque/sdfProperty/torque"
    },
    "IntegerProperty": {
      "label": "Example integer",
      "sdfRef": "#/sdfData/Integer"
    },
    "NumberProperty": {
      "label": "Example number",
      "sdfRef": "#/sdfData/Number"
    },
    "BooleanProperty": {
      "label": "Example boolean",
      "sdfRef": "#/sdfData/Boolean"
    },
    "StringProperty": {
      "label": "Example string",
      "sdfRef": "#/sdfData/String"
    },
    "ArrayProperty": {
      "label": "Example array",
      "sdfRef": "#/sdfData/Array"
    },
    "ObjectProperty": {
      "label": "Example object",
      "sdfRef": "#/sdfData/Object"
    },
    "UnknownProperty": {
      "label": "Example"
    }
  },
  "sdfObject": {
    "TestObject": {
      "sdfProperty": {
        "TestProperty": {
          "description": "The state of the switch; false for off and true for on.",
          "type": "boolean"
        }
      },
      "sdfAction": {
        "on": {
          "description": "Turn the switch on; equivalent to setting value to true."
        },
        "off": {
          "description": "Turn the switch off; equivalent to setting value to false."
        },
        "toggle": {
          "description": "Toggle the switch; equivalent to setting value to its complement."
        }
      }
    }
  },
  "sdfData": {
    "Integer": {
      "type": "integer",
      "nullable": false,
      "minimum": -2,
      "maximum": 2,
      "multipleOf": 2
    },
    "Number": {
      "type": "number",
      "nullable": false,
      "minimum": -1.5,
      "maximum": 1.5,
      "multipleOf": 0.5
    },
    "String": {
      "type": "string",
      "nullable": false,
      "minLength": 10,
      "maxLength": 100,
      "pattern": ".*"
    },
    "ByteString": {
      "type": "string",
      "sdfType": "byte-string",
      "nullable": false
    },
    "Boolean": {
      "type": "boolean",
      "const": true
    },
    "Enum": {
      "type": "integer",
      "nullable": false,
      "sdfChoice": {
        "One": {
          "const": 1
        }
      }
    },
    "Array": {
      "type": "array",
      "nullable": false,
      "minItems": 1,
      "maxItems": 5,
      "items": {
        "type": "integer"
      }
    },
    "Object": {
      "type": "object",
      "nullable": false,
      "properties": {
        "prop1": {
          "type": "number"
        }
      },
      "required": ["prop1"]
    },
    "NullableInteger": {
      "type": "integer"
    },
    "ConstInteger": {
      "const": 2
    },
    "Unknown": {},
    "Reference": {
      "sdfRef": "#/sdfData/AnotherReference",
      "maximum": 3
    },
    "AnotherReference": {
      "sdfRef": "#/sdfData/Integer",
      "const": 0
    }
  }
}
