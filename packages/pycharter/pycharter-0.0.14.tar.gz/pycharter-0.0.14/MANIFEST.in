include README.md
include LICENSE
include pyproject.toml
recursive-include pycharter *.py
# Include Alembic migration template files
recursive-include pycharter/db/migrations *.mako
# Include API files (needed for pycharter api)
recursive-include api *.py
# Include UI server files (needed for pycharter ui serve)
recursive-include ui *.py
# Include pre-built UI static files in package (like Airflow)
recursive-include ui/static *
# Exclude UI source files and build artifacts
prune ui/node_modules
prune ui/.next
prune ui/out
prune ui/src
prune ui/public
recursive-exclude ui *.ts *.tsx *.js *.json *.md
recursive-exclude ui *.config.*

