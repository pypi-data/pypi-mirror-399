{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "local>jwnmulder/renovate-config",
    ":semanticCommits",
    ":semanticCommitTypeAll(chore)"
  ],

  "labels": ["dependencies"],

  "lockFileMaintenance": {
    "enabled": true
  },

  "packageRules": [
    {
      "matchFileNames": [".pre-commit-config.yaml"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "addLabels": ["automerge"]
    },
    {
      "matchManagers": ["pep621"],
      "matchDepTypes": ["project.dependencies", "dependency-groups"],
      "rangeStrategy": "update-lockfile"
    },
    {
      "matchManagers": ["pep621"],
      "matchDepTypes": ["project.dependencies"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "addLabels": ["automerge"]
    },
    {
      "matchManagers": ["pep621"],
      "matchDepTypes": ["dependency-groups"],
      "matchJsonata": [
        "managerData.depGroup = 'dev'"
      ],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "addLabels": ["automerge"]
    },
    {
      "description": "Disable Renovate for .python-version",
      "matchFileNames": [".python-version"],
      "enabled": false
    },
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["python"],
      "pinDigests": true,
      "separateMinorPatch": true
    },
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": "python",
      "matchUpdateTypes": ["major", "minor"],
      "dependencyDashboardApproval": true
    },
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": "python",
      "matchUpdateTypes": ["patch", "pin", "digest"],
      "automerge": true,
      "addLabels": ["automerge"],
      "extends": ["schedule:weekly"]
    }
  ]
}
