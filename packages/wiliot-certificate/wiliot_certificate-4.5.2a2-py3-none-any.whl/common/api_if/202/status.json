{
    "type": "object",
    "patternProperties": {
        "^gatewayI[dD]$": {
            "type": "string",
            "maxLength": 36
        }
    },
    "properties": {
        "gatewayType": {
            "type": "string"
        },
        "gatewayConf": {
            "type": "object",
            "properties": {
                "apiVersion": {
                    "type": "string",
                    "enum": ["202"]
                },
                "gatewayVersion": {
                    "type": "string"
                },
                "interfaceChipSwVersion": {
                    "type": "string"
                },
                "bleChipSwVersion": {
                    "type": "string"
                },
                "additional": {
                    "additionalProperties": true
                }
            },
            "required": ["apiVersion"],
            "oneOf":[
                {"required": ["gatewayVersion"]},
                {"required": ["interfaceChipSwVersion", "bleChipSwVersion"]}
            ]
        },
        "tagMetadataCouplingSupported": {
            "type": "boolean"
        },
        "downlinkSupported": {
            "type": "boolean"
        },
        "bridgeOtaUpgradeSupported": {
            "type": "boolean"
        },
        "fwUpgradeSupported": {
            "type": "boolean"
        },
        "geoLocationSupport": {
            "type": "boolean"
        },
        "gatewayInfo": {
            "type":"object",
            "additionalProperties":true
        }
    },
    "oneOf":[
        {"required": ["gatewayId", "gatewayType", "gatewayConf", "tagMetadataCouplingSupported", "downlinkSupported", "bridgeOtaUpgradeSupported", "fwUpgradeSupported"]},
        {"required": ["gatewayID", "gatewayType", "gatewayConf", "tagMetadataCouplingSupported", "downlinkSupported", "bridgeOtaUpgradeSupported", "fwUpgradeSupported"]}
    ],
    "additionalProperties": false
}


