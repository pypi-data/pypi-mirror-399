{
  "permissions": {
    "allow": [
      "Bash(uv add:*)",
      "Bash(uv run ruff:*)",
      "Bash(uv run python:*)",
      "Bash(uv run pytest:*)",
      "Bash(.claude/skills/quality-gates/scripts/check.sh:*)",
      "Skill(quality-gates)"
    ],
    "deny": [],
    "ask": []
  },
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/quality-gates.sh --lint --format --mypy",
            "timeout": 120
          }
        ]
      }
    ]
  }
}
