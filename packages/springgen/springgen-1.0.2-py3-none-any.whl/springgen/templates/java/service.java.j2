{% include "_imports.java.j2" %}
public interface {{ entity }}Service {

    {{ entity }} getById({{ config['entity']['primary_key']['type'] }} id);

    {{ entity }} save({{ entity }} obj);
    
    {{ entity }} update({{ entity }} obj);

{% if config.features.pagination_and_sorting %}
    Page<{{ entity }}> getPage(Pageable pageable);
{% else %}
    List<{{ entity }}> getAll();
{% endif %}

    void delete({{ config['entity']['primary_key']['type'] }} id);
}
