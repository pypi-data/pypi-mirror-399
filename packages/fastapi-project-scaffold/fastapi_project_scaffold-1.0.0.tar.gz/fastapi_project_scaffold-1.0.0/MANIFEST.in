# Include documentation
include README.md
include LICENSE
include CHANGELOG.md
include QUICK_START.md
include TUTORIAL.md
include BEST_PRACTICES.md
include FAQ.md

# Include CLI templates
recursive-include fastapi_scaffold/cli/templates *.j2

# Include project template files
recursive-include fastapi_scaffold/template *.py
recursive-include fastapi_scaffold/template *.txt
recursive-include fastapi_scaffold/template *.md
recursive-include fastapi_scaffold/template *.example
recursive-include fastapi_scaffold/template *.conf
recursive-include fastapi_scaffold/template *.csv
recursive-include fastapi_scaffold/template *.ini

# Include examples
recursive-include examples *.md
recursive-include examples *.py

# Include .factory droids
recursive-include .factory/droids *.md

# Exclude build artifacts
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude __pycache__
global-exclude *.so
global-exclude *.egg-info

# Exclude test files
prune tests
prune .pytest_cache
prune .mypy_cache

# Exclude development files
exclude .gitignore
exclude .gitattributes
exclude .editorconfig

# Exclude database files
global-exclude *.db
global-exclude *.db-journal
global-exclude *.backup_*

# Exclude virtual environment
prune venv
prune .venv

# Exclude IDE files
prune .vscode
prune .idea
