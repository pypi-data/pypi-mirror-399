<pile xmlns:mu="https://github.com/Jackkillian/modern-urwid" id="root">
    <mu:resources>
        <mu:python module="tests.resources.user" as="user" />
        <mu:python module="tests.resources.theme" />
        <mu:python module="tests.resources.extra" />
    </mu:resources>
    <filler mu:height="1"><text
            id="header_text"
            class="custom"
        >Hello, world</text></filler>
    <filler mu:height="1">
        <text
            markup="Current user: {user.current_user.name}; ID: {user.current_user.id}"
        />
    </filler>
    <filler mu:height="1"><edit caption="Edit: ">
        <mu:signal name="change" callback="@on_edit_change" />
        <mu:signal name="postchange" callback="@on_edit_postchange" />
    </edit></filler>
    <filler mu:height="1"><button
            on_press="@quit_callback"
        >Quit</button></filler>
    <solidfill mu:height="3">.</solidfill>
    <filler mu:height="2"><divider /></filler>
    <filler mu:height="1"><progressbar
            normal="pb_empty"
            complete="pb_full"
            current="57"
        /></filler>
    <filler valign="top" class="dark"><text
        >This should look different</text></filler>
    <padding mu:height="2" left="5" right="2"><filler><text
                id="padded"
            >Left should be 5; right should be 2</text></filler></padding>
    <filler mu:height="3">
        <gridflow
            cell_width="8"
            h_sep="20"
            v_sep="1"
            align="center"
            mu:child_class="flow"
        >
            <text markup="Text 1" align="center" />
            <text markup="Text 2" align="center" />
            <text markup="Text 3" align="center" />
            <text markup="Text 4" align="center" />
            <text markup="Text 5" align="center" />
            <text markup="Text 6" align="center" />
            <text markup="Text 7" align="center" />
            <text markup="Text 8" align="center" />
            <text markup="Text 9" align="center" />
        </gridflow>
    </filler>
    <filler valign="middle"><text
        >This should inherit the pile style</text></filler>
    <columns mu:height="1">
        <filler mu:weight="75"><text class="col1">Col 1</text></filler>
        <filler mu:weight="25"><text class="col2">Col 2</text></filler>
    </columns>
    <customwidgetfromxml mu:height="1" />
    <scrollbar>
        <listbox id="dynamic" />
    </scrollbar>
    <mu:layout
        xml_path="layout2.xml"
        css_path="layout2.css"
        resources="@Layout2Resources"
    />
    <customwidget />
</pile>
