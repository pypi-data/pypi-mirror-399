# Include documentation files
include README.md
include LICENSE

# INCLUDE examples and example data (NEW - part of package)
graft src/adctoolbox/examples
global-exclude *.pyc __pycache__

# Exclude tests (not needed in distribution)
prune tests

# Exclude test reference (CI only)
prune ../test_reference

# Exclude full dataset (in git, but NOT in pip package)
prune ../dataset

# Exclude development files
exclude .gitignore
exclude .gitlab-ci.yml
exclude .github
exclude tox.ini
exclude pytest.ini

# Exclude Python cache files
global-exclude __pycache__
global-exclude *.py[co]
global-exclude .DS_Store
global-exclude *.so
global-exclude *.dylib
