[flake8]
max-line-length = 88
extend-ignore =
    # E203: whitespace before ':'
    E203,
    # W503: line break before binary operator
    W503,
    # E501: line too long (let black handle this)
    E501
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    migrations,
    build,
    dist,
    *.egg-info
per-file-ignores =
    # F401: imported but unused
    __init__.py:F401