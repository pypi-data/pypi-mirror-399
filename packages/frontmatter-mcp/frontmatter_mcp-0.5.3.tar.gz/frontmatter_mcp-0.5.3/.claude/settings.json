{
  "env": {
    "PDD_WORKSPACE_DIR": ".claude/pdd",
    "PDD_LOCALE": "ja"
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "make lint 2>&1 || true"
          }
        ]
      },
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "make typecheck 2>&1 || true"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "mcp__serena"
    ],
    "deny": [],
    "ask": []
  },
  "enabledPlugins": {
    "pdd@kzmshx": true
  }
}
