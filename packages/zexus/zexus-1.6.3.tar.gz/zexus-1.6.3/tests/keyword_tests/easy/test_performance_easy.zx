print "\n=== Test 6: INLINE function declaration ===";
action fastAdd(a, b) {
    return a + b;
}
inline fastAdd;
print "✓ Function marked for inlining";

print "\n=== Test 7: BUFFER allocate ===";
buffer myBuffer allocate(1024);
