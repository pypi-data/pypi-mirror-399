# Medium Tests for IF/ELIF/ELSE Keywords
# Testing nested conditions, complex logic, and edge cases

# Test 1: Nested if statements
let x = 10;
let y = 20;

if (x > 5) {
    if (y > 15) {
        print "Both conditions true";
    }
}
# Expected output: Both conditions true

# Test 2: Nested if-else
let a = 15;

if (a > 10) {
    if (a > 20) {
        print "Greater than 20";
    } else {
        print "Between 10 and 20";
    }
}
# Expected output: Between 10 and 20

# Test 3: If with variable assignment in block
if (true) {
    let result = "Success";
    print result;
}
# Expected output: Success

# Test 4: Multiple conditions with AND
let age = 25;
let hasLicense = true;

if (age >= 18 && hasLicense) {
    print "Can drive";
}
# Expected output: Can drive

# Test 5: Multiple conditions with OR
let isWeekend = false;
let isHoliday = true;

if (isWeekend || isHoliday) {
    print "Day off";
}
# Expected output: Day off

# Test 6: Complex boolean expression
let score = 85;
let bonus = 10;
let total = score + bonus;

if (total >= 90) {
    print "Excellent";
}
# Expected output: Excellent

# Test 7: If with function call
action isEven(n) {
    return n % 2 == 0;
}

if (isEven(10)) {
    print "10 is even";
}
# Expected output: 10 is even

# Test 8: Elif chain with calculations
let value = 50;

if (value < 25) {
    print "Low";
} elif (value < 50) {
    print "Medium";
} elif (value < 75) {
    print "High";
} else {
    print "Very High";
}
# Expected output: High

# Test 9: Nested if-elif-else
let temperature = 75;

if (temperature > 80) {
    print "Hot";
} else {
    if (temperature > 60) {
        print "Warm";
    } elif (temperature > 40) {
        print "Cool";
    } else {
        print "Cold";
    }
}
# Expected output: Warm

