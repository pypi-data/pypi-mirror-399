# Test 14: If returning values (pattern)
action checkSign(num) {
    if (num > 0) {
        return "positive";
    } elif (num < 0) {
        return "negative";
    } else {
        return "zero";
    }
}

let sign1 = checkSign(5);
let sign2 = checkSign(-3);
let sign3 = checkSign(0);

print sign1;
print sign2;
print sign3;
# Expected output: positive, negative, zero

# Test 15: Multiple elif with different types
let input = 42;

if (input == true) {
    print "Boolean true";
} elif (input == false) {
    print "Boolean false";
} elif (input == 42) {
    print "The answer";
} elif (input == null) {
    print "Null value";
} else {
    print "Something else";
}
# Expected output: The answer

# Test 16: If with ternary-like behavior via function
action max(a, b) {
    if (a > b) {
        return a;
    } else {
        return b;
    }
}

let maximum = max(15, 23);
print maximum;
# Expected output: 23

