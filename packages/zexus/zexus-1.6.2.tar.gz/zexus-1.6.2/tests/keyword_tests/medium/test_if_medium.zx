# Test 18: If with early returns
action processValue(val) {
    if (val < 0) {
        return "invalid";
    }
    
    if (val == 0) {
        return "zero";
    }
    
    return "valid";
}

print processValue(-5);
print processValue(0);
print processValue(10);
# Expected output: invalid, zero, valid

# Test 19: Nested conditions with multiple branches
let level = 2;
let points = 150;

if (level == 1) {
    if (points > 100) {
        print "Level 1 Expert";
    } else {
        print "Level 1 Beginner";
    }
} elif (level == 2) {
    if (points > 100) {
        print "Level 2 Expert";
    } else {
        print "Level 2 Beginner";
    }
} else {
    print "Unknown Level";
}
# Expected output: Level 2 Expert

