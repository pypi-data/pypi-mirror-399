# Test while loops with assignment - this should work
action countdown(n):
    let count = n
    while (count > 0):
        print "Count: " + string(count)
        count = count - 1
    return "Blastoff!"

print countdown(3)

# Test factorial without complex conditions
action simple_factorial(n):
    let result = 1
    let i = n
    while (i > 1):
        result = result * i
        i = i - 1
    return result

print "5! = " + string(simple_factorial(5))

