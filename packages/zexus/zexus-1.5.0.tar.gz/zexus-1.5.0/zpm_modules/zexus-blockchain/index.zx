// Factory methods for easy creation
export action create_address(addr: string, chain: ChainType) -> Address {
    return Address{address: addr, chain: chain}
}

export action generate_keypair(chain: ChainType) -> KeyPair {
    let kp = KeyPair{}
    kp.generate(chain)
    return kp
}

export action generate_quantum_keypair(chain: ChainType) -> QuantumResistantKeyPair {
    let kp = QuantumResistantKeyPair{}
    kp.generate_quantum_resistant(chain)
    return kp
}

export action create_transaction(from: Address, to: Address, amount: integer, chain: ChainType) -> BasicTransaction {
    return BasicTransaction{from_addr: from, to_addr: to, amount: amount, chain: chain}
}

export action create_bounceback_transaction(from: Address, to: Address, amount: integer, chain: ChainType) -> BounceBackTransaction {
    return BounceBackTransaction{from_addr: from, to_addr: to, amount: amount, chain: chain}
}

export action create_erc20_token(name: string, symbol: string, initial_supply: integer) -> ERC20Token {
    return ERC20Token{token_name: name, token_symbol: symbol, initial_supply: initial_supply}
}

export action create_seb_defi_protocol() -> SEBDeFiProtocol {
    return SEBDeFiProtocol{}
}

export action create_p2p_network() -> MultiChainP2PNetwork {
    return MultiChainP2PNetwork{}
}

export action create_cross_chain_bridge() -> CrossChainBridge {
    return CrossChainBridge{}
}

