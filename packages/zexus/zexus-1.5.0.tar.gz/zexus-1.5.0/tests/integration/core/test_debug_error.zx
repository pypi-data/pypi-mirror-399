# Error handling with try-catch - USING PARENTHESES AND BRACES
try {
    let result = 10 / 0
    print("This won't print: " + string(result))
} catch((error)) {
    print("‚úÖ Caught division error: " + string(error))
}

# Successful operation - USING PARENTHESES AND BRACES
try {
    let result = 10 / 2
    print("‚úÖ Successful operation: " + string(result))
} catch((error)) {
    print("This won't print: " + string(error))
}

# Nested error handling - USING PARENTHESES AND BRACES
action risky_operation() {
    try {
        if (not file_exists("fake_file.txt")) {
            throw "File not found"
        }
        return "Success"
    } catch((error)) {
        return "Caught: " + string(error)
    }
}

let result = risky_operation()
print("Risky operation result: " + string(result))

